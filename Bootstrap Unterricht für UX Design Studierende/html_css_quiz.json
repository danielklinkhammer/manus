          "library": "H5P.MultiChoice",
          "params": {
            "question": "Welche CSS-Eigenschaft wird verwendet, um ein Element responsiv zu machen, sodass es nie größer als sein Container wird?",
            "answers": [
              {
                "text": "width: 100%;",
                "correct": false,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Falsch. width: 100%; setzt die Breite auf 100% des Containers, aber das Element könnte trotzdem überlaufen, wenn es einen festen Mindestinhalt hat.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "max-width: 100%;",
                "correct": true,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Richtig! max-width: 100%; stellt sicher, dass das Element nie breiter als sein Container wird.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "min-width: 100%;",
                "correct": false,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Falsch. min-width: 100%; würde das Element zwingen, mindestens so breit wie sein Container zu sein, was zu Überlauf führen könnte.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "height: auto;",
                "correct": false,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Falsch. height: auto; betrifft die Höhe, nicht die Breite des Elements.",
                  "notChosenFeedback": ""
                }
              }
            ],
