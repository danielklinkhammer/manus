          "library": "H5P.MultiChoice",
          "params": {
            "question": "Welche der folgenden HTML-Tags sind semantische Elemente?",
            "answers": [
              {
                "text": "&lt;div&gt;",
                "correct": false,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Falsch. &lt;div&gt; ist ein generisches Container-Element ohne semantische Bedeutung.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "&lt;header&gt;",
                "correct": true,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Richtig! &lt;header&gt; ist ein semantisches Element, das einen Kopfbereich definiert.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "&lt;span&gt;",
                "correct": false,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Falsch. &lt;span&gt; ist ein generisches Inline-Element ohne semantische Bedeutung.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "&lt;article&gt;",
                "correct": true,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Richtig! &lt;article&gt; ist ein semantisches Element, das einen eigenständigen Inhalt definiert.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "&lt;nav&gt;",
                "correct": true,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Richtig! &lt;nav&gt; ist ein semantisches Element, das einen Navigationsbereich definiert.",
                  "notChosenFeedback": ""
                }
              }
