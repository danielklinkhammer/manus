          "params": {
            "question": "Welche CSS-Eigenschaft wird verwendet, um ein Element flexibel zu machen?",
            "answers": [
              {
                "text": "display: block;",
                "correct": false,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Falsch. display: block; macht ein Element zu einem Blockelement, aber nicht flexibel.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "display: flex;",
                "correct": true,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Richtig! display: flex; aktiviert das Flexbox-Layout für ein Element.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "display: inline;",
                "correct": false,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Falsch. display: inline; macht ein Element zu einem Inline-Element, aber nicht flexibel.",
                  "notChosenFeedback": ""
                }
              },
              {
                "text": "display: grid;",
                "correct": false,
                "tipsAndFeedback": {
                  "tip": "",
                  "chosenFeedback": "Falsch. display: grid; aktiviert das Grid-Layout, nicht das Flexbox-Layout.",
                  "notChosenFeedback": ""
